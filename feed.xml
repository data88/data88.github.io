<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    {% assign time_format = '%a, %d %b %Y %H:%M:%S %z' %}
    <title>{{ site.name }}</title>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <description>{{ site.description }}</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: time_format }}</pubDate>
    <lastBuildDate>{{ site.time | date: time_format }}</lastBuildDate>
    {% assign addedPosts = 1 %}
    {% for post in site.posts %}
      {% if addedPosts > 10 %}
        {% break %}
      {% endif %}
      {% if post.layout == "post" %}
      <item>
        <title>{{ post.h1 }}</title>
        <link>{{ site.url }}{{ post.url }}</link>
        <pubDate>{{ post.date | date: time_format }}</pubDate>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
        <description>{{ post.content | replace:'="//','="http//' | replace:'href="/','href="http://data88.github.io/' | replace:'src="/','src="http://data88.github.io/' | replace:'="http//','="//' | xml_escape }}</description>
      </item>
      {% endif %}
      {% assign addedPosts = addedPosts + 1 %}
    {% endfor %}
  </channel>
</rss>
